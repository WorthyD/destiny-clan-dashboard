{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "functional", "unused-imports", "no-autofix"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:feature", "type:util", "type:data-access", "type:ui"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:feature", "type:util", "type:data-access", "type:ui"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:util", "type:ui", "type:data-access"]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:util", "type:data-access"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              }
            ]
          }
        ]
      }
    },

    {
      "files": ["*.spec.ts", "*.ts"],
      "extends": ["plugin:@angular-eslint/recommended"],
      "rules": {
        "no-console": [
          "warn",
          {
            "allow": ["error"]
          }
        ],
        "unused-imports/no-unused-imports": "error",
        "@typescript-eslint/no-empty-function": "off"
      }
    },
    {
      "files": ["*.ts"],
      "excludedFiles": ["*.spec.ts", "*.stories.ts"],
      "extends": ["plugin:@angular-eslint/template/process-inline-templates", "plugin:functional/no-mutations", "plugin:storybook/recommended"],
      "rules": {
        "functional/immutable-data": [
          "warn",
          {
            "ignoreAccessorPattern": ["**._mutable*", "**.mutable*"]
          }
        ],
        "functional/prefer-immutable-types":"warn",
        "functional/prefer-readonly-type": "off",
        "no-autofix/functional/prefer-readonly-type": [
          "warn",
          {
            "ignorePattern": ["^mutable", "^_mutable"],
            "ignoreInterface": true
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
